# rails stuff
alias migrate="rake db:migrate"
alias remigrate="rake db:migrate && rake db:migrate:redo"
alias bi='bundle install --binstubs=, --path=.bundle/gems'
alias bu='bundle update'

# git stuff
g() {
  if [[ $# == '0' ]]; then
    git s
  else
    git "$@"
  fi
}

gpr() {
  originurl=$(git config --get remote.origin.url)
  originurl=${originurl/\://}
  originurl=${originurl/\.git/}
  originurl=${originurl/git\@/https://}
  originurl=${originurl/https\//https:}
  branchName=$(git rev-parse --abbrev-ref HEAD)
  giturl=$originurl"/compare/"$branchName"?expand=1"
  open $giturl
}

gbc() {
  git branch --merged | grep -v "\*" | xargs -n 1 git branch -d
}

alias gadd="git add -u && git add . && git status"
alias gi="gem install"
alias gs="git s"
alias ga="git a"
alias gst="git st"
alias gb="git b"
alias gbb="git bb"
alias gc="git c"
alias gca="git ca"
alias gd="git d"
alias gdc="git dc"
alias gpl="git pl"
alias gps="git ps"
alias gr="git r"
alias gg="git g"
alias gt="git t"
alias gbs="git bs"
alias grb="git rb"
alias grc="git rc"
alias gra="git ra"
alias gf="git f"
alias gup="git up"

# git stash
alias sta="git stash"
alias uns="git stash pop"

# file system
alias ls="ls -FhG"
alias ll="ls -AlG"
alias l="ls -AFG"
if type lsd >/dev/null; then
  alias ls='lsd'
  alias ll="ls -al"
  alias l="ls -a"
fi
alias ..='cd ..'
alias ...='cd ../..'

# rails
alias r="rails"
alias rc="rails c"
alias rs="rails s"
alias rg="rails g"

# others
alias e='subl .'

alias pp="git pull --rebase && git push"

function c { cd ~/code/$1; }

